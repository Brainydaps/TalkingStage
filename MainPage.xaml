<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TalkingStage.MainPage">

    <StackLayout Padding="30">
        <Label Text="TalkingStage" FontSize="24" HorizontalOptions="Center" />
        <Entry x:Name="UserInput" Placeholder="Ask me anything..." />
        <Button Text="Send" Clicked="OnSendClicked" />
        <Label x:Name="ResponseLabel" Text="" />
    </StackLayout>

</ContentPage>
